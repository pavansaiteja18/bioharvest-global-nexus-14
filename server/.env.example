
# Environment variables for the BioHarvest application
# Create a copy of this file named .env and update the values

# Node environment (development, production)
NODE_ENV=development

# Server port
PORT=5000

# MongoDB connection string
# Replace yourusername, yourpassword and cluster with your MongoDB Atlas credentials
# Or use a local MongoDB instance
MONGO_URI=mongodb://localhost:27017

# JWT secret for authentication tokens
# Replace this with a secure random string in production
JWT_SECRET=your_jwt_secret_should_be_long_and_random

